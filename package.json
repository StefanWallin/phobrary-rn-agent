{
  "name": "PhobraryAgent",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "./node_modules/.bin/jest --passWithNoTests /src/.*/__tests__/*",
    "test:e2e": "detox test -c ios.sim.debug",
    "test:e2e:build": "detox build"
  },
  "jest": {
    "preset": "react-native"
  },
  "detox": {
    "test-runner": "jest",
    "runner-config": "e2e/config.json",
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/PhobraryAgent.app",
        "build": "set -o pipefail && xcodebuild -project ios/PhobraryAgent.xcodeproj -UseNewBuildSystem=NO -scheme PhobraryAgent -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build | xcpretty",
        "type": "ios.simulator",
        "name": "iPhone 7"
      }
    }
  },
  "dependencies": {
    "babel-plugin-module-resolver": "^3.2.0",
    "deep-equal": "^1.0.1",
    "react": "16.6.1",
    "react-native": "0.57.7",
    "react-native-camera": "^2.6.0",
    "react-native-gesture-handler": "^1.1.0",
    "react-native-linear-gradient": "^2.5.4",
    "react-navigation": "^3.9.0",
    "react-native-qrcode-scanner": "^1.1.2",
    "react-native-zeroconf": "^0.10.0",
    "react-redux": "^6.0.1",
    "redux": "^4.0.1",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0",
    "rn-splash-screen": "^5.2.0"
  },
  "devDependencies": {
    "babel-jest": "24.7.1",
    "detox": "^12.6.0",
    "jest": "^24.7.1",
    "metro-react-native-babel-preset": "0.53.1",
    "react-test-renderer": "16.8.6"
  }
}
